{
  "name": "@valendres/potato-ui",
  "version": "1.0.0",
  "scripts": {
    "build": "run-s clean bundle",
    "bundle": "vite build",
    "clean": "rimraf ./dist",
    "compile": "tsc",
    "format": "prettier --cache",
    "format:all": "yarn format .",
    "format:all:check": "yarn format:all --check",
    "format:all:write": "yarn format:all --write",
    "format:diff": "pretty-quick",
    "format:diff:check": "yarn format:diff --check",
    "format:diff:write": "yarn format:diff",
    "lint": "run-s lint:es",
    "lint:all": "run-s 'lint:*:all'",
    "lint:diff": "run-s 'lint:*:diff'",
    "lint:es": "eslint --cache --cache-strategy=content",
    "lint:es:all": "yarn lint:es \"**/*\"",
    "precommit": "lint-staged",
    "start": "vite"
  },
  "dependencies": {
    "@emotion/cache": "^11.10.1",
    "@emotion/css": "^11.10.0",
    "@emotion/react": "^11.10.0",
    "@emotion/styled": "^11.10.0",
    "@mui/material": "^5.10.1",
    "@tanstack/react-query": "^4.1.0",
    "@trpc/client": "10.0.0-alpha.45",
    "@trpc/react": "10.0.0-alpha.45",
    "@trpc/server": "10.0.0-alpha.45",
    "@valendres/react-components": "workspace:*",
    "@valendres/react-micro-frontend": "workspace:*",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@babel/core": "^7.18.10",
    "@emotion/babel-plugin": "^11.10.0",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@valendres/eslint-config": "workspace:*",
    "@valendres/potato-bff": "workspace:*",
    "@valendres/prettier-config": "workspace:*",
    "@vitejs/plugin-react": "^2.0.0",
    "eslint": "^8.22.0",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "react-refresh": "^0.10.0",
    "rimraf": "^3.0.2",
    "sass": "^1.54.4",
    "typescript": "^4.7.4",
    "vite": "^3.0.0"
  }
}
